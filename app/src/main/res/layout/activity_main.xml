<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Activar"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#35B13A"
            android:id="@+id/idBtnOnBT"
            android:textSize="18sp"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Desactivar"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#5E1010"
            android:id="@+id/idBtnOffBT"
            android:textSize="18sp"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/idBtnConect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#B549F8"
            android:padding="16dp"
            android:text="Conectar"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/idBtnDispBT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#B549F8"
            android:padding="16dp"
            android:text="Disponibles"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idSpinDisp"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/mensajeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/circleImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="100dp"
            android:elevation="8dp"
            android:padding="16dp"
            android:scaleType="center"
            android:src="@drawable/background_circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/idSpinDisp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
